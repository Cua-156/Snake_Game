cmake_minimum_required(VERSION 3.28)

project(MyRaylibGame VERSION 1.0 LANGUAGES CXX)


set(CMAKE_CXX_STANDARD 20)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# --- 1. Fetch Raylib automatically ---
include(FetchContent)
FetchContent_Declare(
    raylib
    GIT_REPOSITORY https://github.com/raysan5/raylib.git
    GIT_TAG master
)

# Only build the library, skip the examples and games to speed up build time
set(BUILD_EXAMPLES OFF CACHE BOOL "" FORCE) 
set(BUILD_GAMES    OFF CACHE BOOL "" FORCE)

FetchContent_MakeAvailable(raylib)

# --- 2. Define your executable ---
add_executable(${PROJECT_NAME} main.cpp)

# --- 3. Link Raylib ---
target_link_libraries(${PROJECT_NAME} PRIVATE raylib)

# Copy Graphics folder into the build directory so runtime can find assets
file(COPY ${CMAKE_SOURCE_DIR}/Graphics DESTINATION ${CMAKE_CURRENT_BINARY_DIR})

# Copy resources (if you had an "resources" folder) to the build directory
# file(COPY resources DESTINATION ${CMAKE_CURRENT_BINARY_DIR})